	<script>
		document.addEventListener('DOMContentLoaded', () => {
			// Array de im√°genes (√≠ndice 0 es el video)
			const productImages = [
				null, // Video en √≠ndice 0
				'/ESTRUCTURAS ALUMINIO/ESTRUCTURAS ALUMINIO/3 METROS/image00003.png',
				'/ESTRUCTURAS ALUMINIO/ESTRUCTURAS ALUMINIO/3 METROS/image00014.png'
			];

			let currentImageIndex = 0;
			const mainVideo = document.getElementById('main-product-video') as HTMLVideoElement | null;
			const mainImageFallback = document.getElementById('main-product-image') as HTMLImageElement | null;
			const thumbnails = document.querySelectorAll('.thumbnail-image');
			const mainImageContainer = document.getElementById('main-image-container');

			// Funci√≥n para cambiar imagen
			function changeImage(index: number) {
				currentImageIndex = index;
				
				if (index === 0) {
					// Mostrar video
					if (mainVideo) {
						mainVideo.style.display = 'block';
						mainVideo.play();
					}
					if (mainImageFallback) {
						mainImageFallback.style.display = 'none';
					}
				} else {
					// Mostrar imagen
					if (mainVideo) {
						mainVideo.style.display = 'none';
						mainVideo.pause();
					}
					if (mainImageFallback && productImages[index]) {
						mainImageFallback.src = productImages[index];
						mainImageFallback.style.display = 'block';
					}
				}
				
				// Actualizar bordes de thumbnails
				thumbnails.forEach((thumb, i) => {
					if (i === index) {
						thumb.classList.remove('border-gray-200');
						thumb.classList.add('border-accent');
					} else {
						thumb.classList.remove('border-accent');
						thumb.classList.add('border-gray-200');
					}
				});
			}

			// Click en thumbnails
			thumbnails.forEach((thumb, index) => {
				thumb.addEventListener('click', () => {
					changeImage(index);
				});
			});

			// Zoom en hover
			if (mainVideo) {
				mainVideo.addEventListener('mouseenter', () => {
					mainVideo.style.transform = 'scale(1.1)';
				});
				mainVideo.addEventListener('mouseleave', () => {
					mainVideo.style.transform = 'scale(1)';
				});
			}
			if (mainImageFallback) {
				mainImageFallback.addEventListener('mouseenter', () => {
					mainImageFallback.style.transform = 'scale(1.1)';
				});
				mainImageFallback.addEventListener('mouseleave', () => {
					mainImageFallback.style.transform = 'scale(1)';
				});
			}

			// Controlar visibilidad del bot√≥n flotante de compra
			const floatingBuyButton = document.getElementById('floating-buy-button');
			const heroSection = document.getElementById('inicio');
			
			function handleScroll() {
				if (!floatingBuyButton || !heroSection) return;
				
				const heroBottom = heroSection.getBoundingClientRect().bottom;
				const shouldShow = heroBottom < 100;
				
				if (shouldShow) {
					floatingBuyButton.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-4');
					floatingBuyButton.classList.add('opacity-100', 'pointer-events-auto', 'translate-y-0');
				} else {
					floatingBuyButton.classList.add('opacity-0', 'pointer-events-none', 'translate-y-4');
					floatingBuyButton.classList.remove('opacity-100', 'pointer-events-auto', 'translate-y-0');
				}
			}
			
			window.addEventListener('scroll', handleScroll);
			handleScroll();
		});
	</script>

