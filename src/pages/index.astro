---
import LandingLayout from '../layouts/LandingLayout.astro';
import CartIcon from '../components/CartIcon.astro';
---

<LandingLayout title="Perú Rocket Importaciones - Monitores Extensores Portátiles">
	<!-- Navegación Sticky -->
	<nav class="fixed top-0 w-full bg-white/90 backdrop-blur-sm z-50 shadow-sm">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center h-20 md:h-24">
				<a href="#inicio" class="flex items-center h-full">
					<img 
						src="/logo_perurocket.png" 
						alt="Perú Rocket Importaciones" 
						class="h-14 md:h-20 w-auto object-contain"
						loading="eager"
					/>
				</a>
				<div class="hidden md:flex items-center space-x-8 text-sm">
					<a href="#inicio" class="text-gray-600 hover:text-accent transition-colors duration-300">Inicio</a>
					<a href="#nosotros" class="text-gray-600 hover:text-accent transition-colors duration-300">Nosotros</a>
					<a href="#productos" class="text-gray-600 hover:text-accent transition-colors duration-300">Productos</a>
					<a href="#contacto" class="text-gray-600 hover:text-accent transition-colors duration-300">Contacto</a>
					<CartIcon />
				</div>
				<div class="md:hidden flex items-center gap-2">
					<CartIcon />
					<button class="text-gray-600" id="mobile-menu-btn">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>
		<div class="md:hidden hidden bg-white border-t border-gray-100" id="mobile-menu">
			<div class="px-4 pt-2 pb-4 space-y-2">
				<a href="#inicio" class="block py-2 text-gray-600 hover:text-accent transition-colors">Inicio</a>
				<a href="#nosotros" class="block py-2 text-gray-600 hover:text-accent transition-colors">Nosotros</a>
				<a href="#productos" class="block py-2 text-gray-600 hover:text-accent transition-colors">Productos</a>
				<a href="#contacto" class="block py-2 text-gray-600 hover:text-accent transition-colors">Contacto</a>
			</div>
		</div>
	</nav>

	<!-- Hero Section -->
	<section id="inicio" class="pt-24 md:pt-32 min-h-[85vh] flex items-center bg-gradient-to-br from-white via-blue-50/30 to-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
			<div class="grid md:grid-cols-2 gap-12 lg:gap-16 items-center">
				<!-- Columna Izquierda -->
				<div class="animate-fade-in-up text-center md:text-left">
					<div class="mb-8 flex justify-center md:justify-start">
						<img 
							src="/logo_perurocket.png" 
							alt="Perú Rocket Importaciones" 
							class="h-32 md:h-40 w-auto object-contain"
							loading="eager"
						/>
					</div>
					<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary leading-tight mb-6">
						Transforma tu <span class="text-accent">productividad</span> con tecnología de vanguardia
					</h1>
					<p class="text-lg md:text-xl text-secondary leading-relaxed mb-8 max-w-2xl mx-auto md:mx-0">
						Especialistas en importación de monitores extensores portátiles de alta calidad. 
						Multiplica tu espacio de trabajo con un solo cable.
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
						<a href="#productos" class="inline-block bg-accent text-white px-8 py-3.5 rounded-md font-medium hover:bg-accent-hover transition-colors duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 text-center">
							Ver productos
						</a>
						<a href="#nosotros" class="inline-block bg-white text-primary border-2 border-gray-200 px-8 py-3.5 rounded-md font-medium hover:border-accent hover:text-accent transition-all duration-300 text-center">
							Conocer más
						</a>
					</div>
				</div>
				<!-- Columna Derecha -->
				<div class="animate-scale-in">
					<div class="grid grid-cols-2 gap-4">
						<div class="space-y-4">
							<img 
								src="/S900/S900 (7).jpg" 
								alt="Extensor S900 - Doble pantalla" 
								class="w-full rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
								loading="lazy"
							/>
							<img 
								src="/S788/S788 mail pictures/S788主图 (1).jpg" 
								alt="Extensor S788 - Triple pantalla" 
								class="w-full rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
								loading="lazy"
							/>
						</div>
						<div class="space-y-4 pt-8">
							<img 
								src="/S900/S900详情页 (1).jpg" 
								alt="Detalle monitor S900" 
								class="w-full rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
								loading="lazy"
							/>
							<img 
								src="/S788/S788 mail pictures/S788主图 (3).jpg" 
								alt="Detalle monitor S788" 
								class="w-full rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
								loading="lazy"
							/>
						</div>
