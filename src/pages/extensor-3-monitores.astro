									<h3 class="text-xl font-medium text-primary">Modo triple lateral</h3>
								</div>
							</div>
						</div>
						
						<!-- Slide 3 -->
						<div class="min-w-[calc(100%-2rem)] md:min-w-[calc(50%-1rem)] lg:min-w-[calc(33.333%-1.5rem)] scroll-fade-in">
							<div class="bg-white rounded-lg overflow-hidden shadow-md hover:scale-105 hover:shadow-2xl transition-all duration-300">
