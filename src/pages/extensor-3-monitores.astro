---
import LandingLayout from '../layouts/LandingLayout.astro';
---

<LandingLayout>
	<!-- Navegación Sticky -->
	<nav class="fixed top-0 w-full bg-white/90 backdrop-blur-sm z-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center h-20 md:h-24">
				<a href="#inicio" class="flex items-center h-full">
					<img 
						src="/logo_perurocket.png" 
						alt="Perú Rocket Importaciones" 
						class="h-14 md:h-20 w-auto object-contain"
						loading="eager"
					/>
				</a>
				<div class="hidden md:flex space-x-8 text-sm">
					<a href="#inicio" class="text-gray-600 hover:text-accent transition-colors duration-300">Inicio</a>
					<a href="#caracteristicas" class="text-gray-600 hover:text-accent transition-colors duration-300">Características</a>
					<a href="#modos" class="text-gray-600 hover:text-accent transition-colors duration-300">Modos</a>
					<a href="#especificaciones" class="text-gray-600 hover:text-accent transition-colors duration-300">Especificaciones</a>
					<a href="#opiniones" class="text-gray-600 hover:text-accent transition-colors duration-300">Opiniones</a>
					<a href="#comprar" class="text-gray-600 hover:text-accent transition-colors duration-300">Comprar</a>
				</div>
				<button class="md:hidden text-gray-600" id="mobile-menu-btn">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>
		<div class="md:hidden hidden bg-white border-t border-gray-100" id="mobile-menu">
			<div class="px-4 pt-2 pb-4 space-y-2">
				<a href="#inicio" class="block py-2 text-gray-600 hover:text-accent transition-colors">Inicio</a>
				<a href="#caracteristicas" class="block py-2 text-gray-600 hover:text-accent transition-colors">Características</a>
				<a href="#modos" class="block py-2 text-gray-600 hover:text-accent transition-colors">Modos</a>
				<a href="#especificaciones" class="block py-2 text-gray-600 hover:text-accent transition-colors">Especificaciones</a>
				<a href="#opiniones" class="block py-2 text-gray-600 hover:text-accent transition-colors">Opiniones</a>
				<a href="#comprar" class="block py-2 text-gray-600 hover:text-accent transition-colors">Comprar</a>
			</div>
		</div>
	</nav>

	<!-- Hero Section -->
	<section id="inicio" class="pt-24 md:pt-28 min-h-[75vh] flex items-center bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
			<div class="grid md:grid-cols-[45%_55%] gap-8 lg:gap-12 items-center">
				<!-- Columna Izquierda -->
				<div class="animate-fade-in-up">
					<h1 class="text-4xl md:text-5xl lg:text-[4.5rem] font-bold text-primary leading-tight mb-6">
						Transforma tu laptop en una estación de trabajo de <span class="text-accent">múltiples pantallas</span>
					</h1>
					<p class="text-lg text-secondary leading-relaxed mb-8">
						Accede a 4 pantallas con un solo cable, para trabajar, editar y crear sin límites.
					</p>
					<a href="#comprar" class="inline-block bg-accent text-white px-8 py-3.5 rounded-md font-medium hover:bg-accent-hover transition-colors duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
						Ver oferta
					</a>
				</div>
				<!-- Columna Derecha -->
				<div class="animate-scale-in">
					<div class="w-full mx-auto rounded-lg shadow-lg overflow-hidden">
						<video 
							autoplay 
							loop 
							muted 
							playsinline
							class="w-full h-auto rounded-lg"
							poster="/S788/S788 mail pictures/S788主图 (1).jpg"
						>
							<source src="/S788/video1.mp4" type="video/mp4" />
							<img 
								src="/S788/S788 mail pictures/S788主图 (1).jpg" 
								alt="Triple Screen Laptop Monitor Extender" 
								class="w-full h-auto"
								loading="eager"
							/>
						</video>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Sección de Características Principales -->
	<section id="caracteristicas" class="py-20 md:py-24 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl md:text-4xl font-semibold text-primary text-center mb-10 md:mb-12">
				Características destacadas
			</h2>
			
			<!-- Tres Columnas Principales -->
			<div class="grid md:grid-cols-3 gap-12 md:gap-16 mb-16">
				<div class="scroll-fade-in">
					<div class="text-accent text-5xl font-bold mb-4">01</div>
					<h3 class="text-2xl font-semibold text-primary mb-4">
						Pantalla triple/quad desplegable
					</h3>
					<p class="text-base text-secondary leading-relaxed">
						Extiende tu espacio de trabajo hasta 3 o 4 monitores con un solo accesorio portátil.
					</p>
				</div>
				
				<div class="scroll-fade-in">
					<div class="text-accent text-5xl font-bold mb-4">02</div>
					<h3 class="text-2xl font-semibold text-primary mb-4">
						Diseño plegable & portátil
					</h3>
					<p class="text-base text-secondary leading-relaxed">
						Llévalo donde vayas, instala en cuestión de minutos y trabaja desde cualquier lugar.
					</p>
				</div>
				
				<div class="scroll-fade-in">
					<div class="text-accent text-5xl font-bold mb-4">03</div>
					<h3 class="text-2xl font-semibold text-primary mb-4">
						Compatibilidad máxima
					</h3>
					<p class="text-base text-secondary leading-relaxed">
						Compatible con laptops de 12″ a 18,5″, Mac (M1/M2/M3/M4) y Windows, con un solo cable.
					</p>
				</div>
			</div>

			<!-- Video de Instalación -->
			<div class="mb-16 scroll-fade-in">
				<div class="max-w-4xl mx-auto">
					<h3 class="text-2xl font-semibold text-primary text-center mb-6">
						Instalación en minutos
					</h3>
					<div class="rounded-lg overflow-hidden shadow-xl">
						<video 
							controls 
							class="w-full"
							poster="/S788/S788 mail pictures/S788主图 (2).jpg"
						>
							<source src="/S788/instalacion.mp4" type="video/mp4" />
							Tu navegador no soporta la reproducción de videos.
						</video>
					</div>
				</div>
			</div>

			<!-- Grid de Mini-Cards -->
			<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6">
				<div class="p-5 bg-white border border-gray-100 rounded-lg hover:transform hover:-translate-y-1 hover:shadow-lg transition-all duration-300 scroll-fade-in">
					<div class="w-12 h-12 mb-3 flex items-center justify-center">
						<svg class="w-full h-full text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
						</svg>
					</div>
					<h4 class="text-lg font-semibold text-primary mb-2">sRGB 100%</h4>
					<p class="text-sm text-gray-600">Colores precisos y vibrantes</p>
				</div>
				
				<div class="p-5 bg-white border border-gray-100 rounded-lg hover:transform hover:-translate-y-1 hover:shadow-lg transition-all duration-300 scroll-fade-in">
					<div class="w-12 h-12 mb-3 flex items-center justify-center">
						<svg class="w-full h-full text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
						</svg>
					</div>
					<h4 class="text-lg font-semibold text-primary mb-2">16:10 / 1920×1200</h4>
					<p class="text-sm text-gray-600">Resolución Full HD+</p>
				</div>
				
				<div class="p-5 bg-white border border-gray-100 rounded-lg hover:transform hover:-translate-y-1 hover:shadow-lg transition-all duration-300 scroll-fade-in">
					<div class="w-12 h-12 mb-3 flex items-center justify-center">
						<svg class="w-full h-full text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
						</svg>
					</div>
					<h4 class="text-lg font-semibold text-primary mb-2">Ángulo 178°</h4>
					<p class="text-sm text-gray-600">Visión ultra amplia</p>
				</div>
				
				<div class="p-5 bg-white border border-gray-100 rounded-lg hover:transform hover:-translate-y-1 hover:shadow-lg transition-all duration-300 scroll-fade-in">
					<div class="w-12 h-12 mb-3 flex items-center justify-center">
						<svg class="w-full h-full text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
						</svg>
					</div>
					<h4 class="text-lg font-semibold text-primary mb-2">Modos múltiples</h4>
					<p class="text-sm text-gray-600">Despliegue flexible</p>
				</div>
				
				<div class="p-5 bg-white border border-gray-100 rounded-lg hover:transform hover:-translate-y-1 hover:shadow-lg transition-all duration-300 scroll-fade-in">
					<div class="w-12 h-12 mb-3 flex items-center justify-center">
						<svg class="w-full h-full text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
						</svg>
					</div>
					<h4 class="text-lg font-semibold text-primary mb-2">Instalación rápida</h4>
					<p class="text-sm text-gray-600">Listo en minutos</p>
				</div>
				
				<div class="p-5 bg-white border border-gray-100 rounded-lg hover:transform hover:-translate-y-1 hover:shadow-lg transition-all duration-300 scroll-fade-in">
					<div class="w-12 h-12 mb-3 flex items-center justify-center">
						<svg class="w-full h-full text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
						</svg>
					</div>
					<h4 class="text-lg font-semibold text-primary mb-2">Soporte ergonómico</h4>
					<p class="text-sm text-gray-600">Comodidad integrada</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Sección de Modos y Usos -->
	<section id="modos" class="py-20 md:py-24 bg-[#f9f9f9]">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl md:text-4xl font-semibold text-primary text-center mb-12 md:mb-16">
				Modos de visualización alternativos
			</h2>
			
			<!-- Carousel Container -->
			<div class="relative">
				<div class="overflow-hidden">
					<div class="flex gap-5 md:gap-8 transition-transform duration-500 ease-in-out" id="carousel-track">
